#!/usr/bin/env php
<?php

if (file_exists(__DIR__.'/../../../autoload.php')) {
    require __DIR__.'/../../../autoload.php';
} else {
    require __DIR__.'/../vendor/autoload.php';
}

$app = new Symfony\Component\Console\Application('Devingo Core Assistant', '1.0.0');
$app->add(new Devingo\Installer\Console\Commands\NewCommand);
$app->add(new Devingo\Installer\Console\Commands\UpdateCoreCommand);
$app->add(new Devingo\Installer\Console\Commands\CacheCommand());

$app->run();
